      "id": "mem-global-autonomy-003",
      "scope": "global",
      "title": "Human-in-the-Loop Decision Points",
      "summary": "Critical decisions require human (Johan) approval. AI autonomy ends at clearly defined boundaries. Human judgment is final authority.",
      "created_at": "2024-12-05T00:00:00Z",
      "author": "foreman",
      "importance": "critical",
      "tags": ["autonomy", "human-in-loop", "approval", "safety"],
      "details": {
        "human_approval_triggers": [
          "New module or major feature proposals",
          "Breaking changes to existing functionality",
          "Major version increments",
          "Changes to governance policies",
          "Compliance policy modifications",
          "Security incident escalations",
          "Production deployment authorization",
          "Ambiguous requirements resolution"
        ],
        "escalation_protocol": [
          "Foreman detects decision requiring human judgment",
          "Foreman prepares decision package with context and options",
          "Foreman presents to Johan with recommendation",
          "Johan provides decision",
          "Foreman executes based on approval"
        ],
        "ai_limitations_acknowledged": [
          "AI cannot make subjective UX quality judgments",
          "AI cannot determine business priority tradeoffs",
          "AI cannot assess organizational readiness",
          "AI cannot make ethical decisions beyond rules"
        ]
      },
