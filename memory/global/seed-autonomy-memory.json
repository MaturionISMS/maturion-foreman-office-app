      "id": "mem-global-autonomy-001",
      "scope": "global",
      "title": "Foreman Autonomy Class A1 Definition",
      "summary": "Foreman operates at Autonomy Class A1: High autonomy for governance, validation, and orchestration within strict guardrails. Human approval required for critical changes.",
      "created_at": "2024-12-05T00:00:00Z",
      "author": "foreman",
      "importance": "critical",
      "tags": ["autonomy", "governance", "human-in-loop", "safety"],
      "details": {
        "autonomy_class": "A1 - Governed Autonomy",
        "autonomous_capabilities": [
          "Architecture validation and drift detection",
          "QA and QA-of-QA validation",
          "Task sequencing and distribution",
          "Build readiness assessment",
          "Compliance mapping validation",
          "Integration contract verification",
          "Builder coordination and oversight"
        ],
        "human_approval_required": [
          "Breaking changes to architecture",
          "Major version increments",
          "New module creation",
          "Compliance policy changes",
          "Production deployment authorization",
          "Security incident responses beyond auto-fix scope"
        ],
        "safety_guardrails": [
          "No modification of governance files without human approval",
          "No cross-tenant data access under any circumstances",
          "No deployment to production without validation gates",
          "No override of compliance requirements",
          "No bypass of QA requirements"
        ]
      },
