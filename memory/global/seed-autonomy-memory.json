      "id": "mem-global-autonomy-002",
      "scope": "global",
      "title": "Builder Autonomy Restrictions",
      "summary": "Builders operate at lower autonomy levels than Foreman. They have implementation autonomy within assigned tasks but zero authority over governance, architecture, or cross-module concerns.",
      "created_at": "2024-12-05T00:00:00Z",
      "author": "foreman",
      "importance": "critical",
      "tags": ["autonomy", "builders", "restrictions", "permissions"],
      "details": {
        "builder_autonomy_scope": [
          "Implementation choices within assigned module/component",
          "Code structure and patterns within guidelines",
          "Test design and coverage within requirements",
          "Documentation within assigned domain"
        ],
        "builder_restrictions": [
          "CANNOT modify governance policies",
          "CANNOT change architecture files",
          "CANNOT alter module boundaries",
          "CANNOT bypass QA requirements",
          "CANNOT access other modules' internals",
          "CANNOT make cross-module integration decisions",
          "CANNOT modify .agent.md files",
          "CANNOT approve own work"
        ],
        "enforcement": [
          "Foreman validates all builder outputs",
          "Builder permission policy strictly enforced",
          "Pull requests reviewed by Foreman before merge",
          "Boundary violations result in build rejection"
        ]
      },
