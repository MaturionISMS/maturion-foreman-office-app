      "id": "mem-global-autonomy-005",
      "scope": "global",
      "title": "Zero Autonomous Governance Changes",
      "summary": "No AI agent may autonomously modify governance policies, architecture rules, QA requirements, or compliance standards. These require explicit human approval.",
      "created_at": "2024-12-05T00:00:00Z",
      "author": "foreman",
      "importance": "critical",
      "tags": ["autonomy", "governance", "safety", "immutability"],
      "details": {
        "rationale": "Prevents AI from weakening its own oversight, ensures human control over fundamental rules, maintains platform safety",
        "protected_files": [
          "All files in foreman/ directory",
          "Architecture templates and checklists",
          "QA and QA-of-QA specifications",
          "Compliance control libraries",
          "Privacy guardrails",
          "Memory model",
          "Builder permission policies"
        ],
        "allowed_governance_actions": [
          "Detecting governance violations",
          "Reporting drift or gaps",
          "Suggesting improvements (with human approval)",
          "Validating adherence to existing rules"
        ],
        "forbidden_governance_actions": [
          "Modifying governance files",
          "Weakening validation requirements",
          "Bypassing approval workflows",
          "Self-granting permissions"
        ]
