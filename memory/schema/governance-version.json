{
  "description": "Governance Memory Version Schema - Tracks governance memory state and versioning",
  "version": "1.0.0",
  "schema": {
    "version": {
      "type": "string",
      "description": "Semantic version of governance memory (e.g., 1.0.0)",
      "required": true,
      "format": "semver",
      "example": "1.2.3"
    },
    "timestamp": {
      "type": "string",
      "format": "ISO8601",
      "description": "When this version was created",
      "required": true,
      "example": "2024-12-23T16:00:00Z"
    },
    "commit_sha": {
      "type": "string",
      "description": "Git commit SHA that defines this version",
      "required": false,
      "example": "a1b2c3d4e5f6"
    },
    "checksum": {
      "type": "string",
      "description": "SHA256 checksum of all governance memory files",
      "required": true,
      "example": "e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"
    },
    "files": {
      "type": "array",
      "description": "List of governance memory files in this version",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path to memory file"
          },
          "checksum": {
            "type": "string",
            "description": "SHA256 checksum of the file"
          }
        }
      },
      "example": [
        {
          "path": "memory/global/seed-governance-memory.json",
          "checksum": "abc123..."
        }
      ]
    },
    "schema_version": {
      "type": "string",
      "description": "Version of memory-entry.json schema used",
      "required": true,
      "example": "1.0.0"
    }
  },
  "usage": {
    "purpose": "Enable detection of governance memory changes and prevent stale memory usage",
    "load_rules": [
      "Version file must be loaded before any memory access",
      "Version mismatch triggers soft stop",
      "Checksum mismatch triggers reload"
    ],
    "update_rules": [
      "Version increments on any governance memory change",
      "Checksums must be recalculated on update",
      "Timestamp must be current on update"
    ]
  },
  "compliance": {
    "governance_authority": "/foreman/behaviours/memory-rules.md",
    "mandatory_for": "FM App runtime memory operations",
    "audit_required": true
  }
}
