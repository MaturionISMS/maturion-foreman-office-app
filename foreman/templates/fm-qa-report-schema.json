{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FM QA Report Schema",
  "description": "JSON Schema for FM QA Report validation. Enforces agent-scoped QA boundaries.",
  "type": "object",
  "required": [
    "qa_report_metadata",
    "report_type",
    "agent_id",
    "timestamp",
    "qa_status",
    "evidence_chain",
    "test_summary",
    "gate_compliance",
    "immutable"
  ],
  "properties": {
    "qa_report_metadata": {
      "type": "object",
      "description": "Agent attribution metadata for QA boundary enforcement",
      "required": ["agent_type", "agent_id", "scope", "repository", "timestamp"],
      "properties": {
        "agent_type": {
          "type": "string",
          "const": "fm",
          "description": "Agent type - must be 'fm' for FM QA reports"
        },
        "agent_id": {
          "type": "string",
          "enum": ["fm-builder", "fm-agent"],
          "description": "Specific FM agent identifier"
        },
        "agent_version": {
          "type": "string",
          "description": "Version of the FM agent"
        },
        "scope": {
          "type": "string",
          "const": "fm-qa",
          "description": "QA scope - must be 'fm-qa' for FM agents"
        },
        "repository": {
          "type": "string",
          "const": "maturion-foreman-office-app",
          "description": "Repository - must be 'maturion-foreman-office-app' for FM QA"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of QA execution"
        }
      },
      "additionalProperties": false
    },
    "report_type": {
      "type": "string",
      "const": "FM_QA_REPORT",
      "description": "Type of report - must be FM_QA_REPORT"
    },
    "agent_id": {
      "type": "string",
      "enum": ["fm-builder", "fm-agent"],
      "description": "FM agent identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of report generation"
    },
    "qa_status": {
      "type": "string",
      "enum": ["READY", "NOT_READY"],
      "description": "Explicit readiness declaration - READY or NOT_READY"
    },
    "evidence_chain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Path to evidence artifact"
      },
      "description": "Array of evidence artifact paths supporting this report"
    },
    "test_summary": {
      "type": "object",
      "required": ["total", "passed", "failed", "skipped"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of tests"
        },
        "passed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests passed"
        },
        "failed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests failed"
        },
        "skipped": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests skipped"
        }
      },
      "description": "Summary of test execution results"
    },
    "gate_compliance": {
      "type": "object",
      "required": ["agent_boundary", "architecture", "governance"],
      "properties": {
        "agent_boundary": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Agent boundary compliance status"
        },
        "architecture": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Architecture alignment compliance status"
        },
        "governance": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Governance compliance status"
        },
        "orchestration": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "FM orchestration compliance status (optional)"
        }
      },
      "description": "Gate compliance verification"
    },
    "immutable": {
      "type": "boolean",
      "const": true,
      "description": "Immutability flag - must be true"
    },
    "fm_specific": {
      "type": "object",
      "description": "FM-specific QA metrics (optional)",
      "properties": {
        "orchestration_tests": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of orchestration tests"
        },
        "dashboard_tests": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of dashboard tests"
        },
        "enforcement_tests": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of enforcement tests"
        },
        "integration_tests": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of integration tests"
        }
      }
    },
    "qa_details": {
      "type": "object",
      "description": "Additional QA details (optional)",
      "properties": {
        "test_framework": {
          "type": "string",
          "description": "Testing framework used"
        },
        "coverage_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Test coverage percentage"
        },
        "test_duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total test execution time in seconds"
        }
      }
    }
  },
  "additionalProperties": false
}
