{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance QA Report Schema",
  "description": "JSON Schema for Governance QA Report validation. Enforces agent-scoped QA boundaries.",
  "type": "object",
  "required": [
    "qa_report_metadata",
    "report_type",
    "agent_id",
    "timestamp",
    "qa_status",
    "evidence_chain",
    "compliance_summary",
    "gate_compliance",
    "immutable"
  ],
  "properties": {
    "qa_report_metadata": {
      "type": "object",
      "description": "Agent attribution metadata for QA boundary enforcement",
      "required": ["agent_type", "agent_id", "scope", "repository", "timestamp"],
      "properties": {
        "agent_type": {
          "type": "string",
          "const": "governance",
          "description": "Agent type - must be 'governance' for Governance QA reports"
        },
        "agent_id": {
          "type": "string",
          "enum": ["governance-administrator", "governance-liaison"],
          "description": "Specific Governance agent identifier"
        },
        "agent_version": {
          "type": "string",
          "description": "Version of the Governance agent"
        },
        "scope": {
          "type": "string",
          "const": "governance-qa",
          "description": "QA scope - must be 'governance-qa' for Governance agents"
        },
        "repository": {
          "type": "string",
          "const": "maturion-foreman-governance",
          "description": "Repository - must be 'maturion-foreman-governance' for Governance QA"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of QA execution"
        }
      },
      "additionalProperties": false
    },
    "report_type": {
      "type": "string",
      "const": "GOVERNANCE_QA_REPORT",
      "description": "Type of report - must be GOVERNANCE_QA_REPORT"
    },
    "agent_id": {
      "type": "string",
      "enum": ["governance-administrator", "governance-liaison"],
      "description": "Governance agent identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of report generation"
    },
    "qa_status": {
      "type": "string",
      "enum": ["READY", "NOT_READY"],
      "description": "Explicit readiness declaration - READY or NOT_READY"
    },
    "evidence_chain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Path to evidence artifact"
      },
      "description": "Array of evidence artifact paths supporting this report"
    },
    "compliance_summary": {
      "type": "object",
      "required": ["total_checks", "passed", "failed", "warnings"],
      "properties": {
        "total_checks": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of compliance checks"
        },
        "passed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of checks passed"
        },
        "failed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of checks failed"
        },
        "warnings": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of warnings"
        }
      },
      "description": "Summary of compliance check results"
    },
    "gate_compliance": {
      "type": "object",
      "required": ["agent_boundary", "canonical_alignment", "governance_rules"],
      "properties": {
        "agent_boundary": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Agent boundary compliance status"
        },
        "canonical_alignment": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Canonical alignment compliance status"
        },
        "governance_rules": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Governance rules compliance status"
        },
        "constitutional_compliance": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Constitutional compliance status (optional)"
        }
      },
      "description": "Gate compliance verification"
    },
    "immutable": {
      "type": "boolean",
      "const": true,
      "description": "Immutability flag - must be true"
    },
    "governance_specific": {
      "type": "object",
      "description": "Governance-specific QA details (optional)",
      "properties": {
        "policy_violations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of policy violations detected"
        },
        "constitutional_violations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of constitutional violations detected"
        },
        "canonical_drift_detected": {
          "type": "boolean",
          "description": "Whether canonical drift was detected"
        },
        "governance_artifacts_validated": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of governance artifacts validated"
        }
      }
    },
    "qa_details": {
      "type": "object",
      "description": "Additional QA details (optional)",
      "properties": {
        "validation_framework": {
          "type": "string",
          "description": "Validation framework used"
        },
        "validation_duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total validation time in seconds"
        }
      }
    }
  },
  "additionalProperties": false
}
