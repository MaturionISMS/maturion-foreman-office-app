{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Builder QA Report Schema",
  "description": "JSON Schema for Builder QA Report validation. Conforms to EVIDENCE_SCHEMA_CANON.json.",
  "type": "object",
  "required": [
    "report_type",
    "agent_id",
    "timestamp",
    "qa_status",
    "evidence_chain",
    "test_summary",
    "gate_compliance",
    "immutable"
  ],
  "properties": {
    "report_type": {
      "type": "string",
      "const": "BUILDER_QA_REPORT",
      "description": "Type of report - must be BUILDER_QA_REPORT"
    },
    "agent_id": {
      "type": "string",
      "enum": ["ui-builder", "api-builder", "schema-builder", "integration-builder", "qa-builder"],
      "description": "Builder agent identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of report generation"
    },
    "qa_status": {
      "type": "string",
      "enum": ["READY", "NOT_READY"],
      "description": "Explicit readiness declaration - READY or NOT_READY"
    },
    "evidence_chain": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Path to evidence artifact"
      },
      "description": "Array of evidence artifact paths supporting this report"
    },
    "test_summary": {
      "type": "object",
      "required": ["total", "passed", "failed", "skipped"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of tests"
        },
        "passed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests passed"
        },
        "failed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests failed"
        },
        "skipped": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of tests skipped"
        }
      },
      "description": "Summary of test execution results"
    },
    "gate_compliance": {
      "type": "object",
      "required": ["agent_boundary", "architecture", "governance"],
      "properties": {
        "agent_boundary": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Agent boundary compliance status"
        },
        "architecture": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Architecture alignment compliance status"
        },
        "governance": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Governance compliance status"
        },
        "build_to_green": {
          "type": "string",
          "enum": ["COMPLIANT", "NON_COMPLIANT"],
          "description": "Build-to-green compliance status (optional)"
        }
      },
      "description": "Gate compliance verification"
    },
    "immutable": {
      "type": "boolean",
      "const": true,
      "description": "Immutability flag - must be true"
    },
    "task_reference": {
      "type": "string",
      "description": "Reference to the build task (optional)"
    },
    "module_id": {
      "type": "string",
      "description": "Module identifier if applicable (optional)"
    },
    "qa_details": {
      "type": "object",
      "description": "Additional QA details (optional)",
      "properties": {
        "test_framework": {
          "type": "string",
          "description": "Testing framework used"
        },
        "coverage_percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Test coverage percentage"
        },
        "test_duration_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total test execution time in seconds"
        }
      }
    }
  },
  "additionalProperties": false
}
