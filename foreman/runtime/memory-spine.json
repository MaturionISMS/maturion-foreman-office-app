{
  "description": "Canonical description of long-lived memories shared between Build-time Foreman and Run-time Maturion.",
  "version": "1.0.0",
  "last_updated_by": "governance",
  "layers": [
    {
      "id": "governance_knowledge",
      "purpose": "Architecture, QA, compliance, and build philosophy knowledge that must persist across all versions.",
      "source_documents": [
        "foreman/identity.md",
        "foreman/roles-and-duties.md",
        "foreman/memory-model.md",
        "foreman/privacy-guardrails.md",
        "foreman/runtime-agent-plan.md",
        "foreman/task-distribution-rules.md",
        "foreman/qa-governance.md",
        "foreman/qa-of-qa.md",
        "foreman/compliance/compliance-engine-initialization.md"
      ],
      "retention_policy": "permanent",
      "accessible_in": ["foreman_build_time", "maturion_runtime"],
      "contains_tenant_data": false
    },
    {
      "id": "architecture_index",
      "purpose": "Indexed architecture metadata across all ISMS modules and versions.",
      "source_documents": [
        "ARCHITECTURE_INDEX.json",
        "STANDARDISATION_REPORT.md"
      ],
      "retention_policy": "permanent",
      "accessible_in": ["foreman_build_time"],
      "contains_tenant_data": false
    },
    {
