      "source_documents": [
        "foreman/ai-memory/knowledge-base-schema.json",
        "foreman/ai-memory/reasoning-patterns-schema.json",
        "foreman/ai-memory/historical-issues-schema.json",
        "foreman/ai-memory/architectural-lessons.md"
      ],
      "retention_policy": "rolling_5_versions",
      "accessible_in": ["foreman_build_time", "maturion_runtime"],
      "contains_tenant_data": false
    }
  ],
  "governance_rules": {
    "no_raw_tenant_data": true,
    "no_credentials_or_secrets": true,
    "export_import_must_follow": [
      "foreman/upgrade/runtime-export-spec.md",
      "foreman/upgrade/foreman-import-spec.md",
      "foreman/transition/continuity-protocol.md"
    ]
  }
}
